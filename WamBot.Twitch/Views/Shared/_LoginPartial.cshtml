@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Index">
                <img width="32" height="32" class="rounded-circle" src="@User.FindFirst("urn:twitch:profileimageurl").Value" />
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Index">Login with Twitch</a>
        </li>
    }
</ul>
